<?xml version="1.0" encoding="utf-8"?>
{% load michaux %}
<Collection MaxLevel="4" TileSize="64" Format="jpg" NextItemId="{{ sqs|length }}" ServerFormat="Default" xmlns="http://schemas.microsoft.com/deepzoom/2009">
  <Items>
    {% for o in sqs %}
    {% with w=o.object %}
    <I Id="{{ w.cote }}" N="{{ w.cote }}" Source="{% if w.picture.original_image %}../../media/{{ w.picture.original_image.name|dzi }}{% else %}/static/unknown.dzi{% endif %}">
      {% if w.image.width > w.image.height %}
      <Size Width="{{ w.image.width|default:'120' }}" Height="{{ w.image.width|default:'120' }}" />
{% else %}
      <Size Width="{{ w.image.height|default:'120' }}" Height="{{ w.image.height|default:'120' }}" />
{% endif %}
    </I>
    {% endwith %}
    {% endfor %}
  </Items>
</Collection>
